<com.doubleyellow.view.SBRelativeLayout
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:dy="http://double-yellow.be"
              android:id="@+id/ll_match"
              android:layout_margin="5dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- TODO: clear button: empty event and round -->

        <LinearLayout
            android:id="@+id/match_splitterP"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_dark"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <RelativeLayout
                android:id="@+id/ll_match_singles"
                android:layout_below="@id/match_splitterP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:inputType="none"
                    android:id="@+id/lblPlayersS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_players"
                    android:textSize="@dimen/txt_medium"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <!-- just an layout that is center in the parent to allow aligning to -->
                <LinearLayout
                        android:id="@+id/match_splitterPS"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"/>
            <com.doubleyellow.scoreboard.view.PlayerTextView
                    android:id="@+id/match_playerA"
                    android:hint="@string/lbl_player_A"
                    android:textSize="@dimen/txt_small"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="@dimen/sb_playername_leftpadding"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:background="@drawable/button_dark"
                    android:tag="item"
                    android:layout_below="@id/lblPlayersS"
                    android:layout_toLeftOf="@id/match_splitterPS"
                    android:layout_toStartOf="@id/match_splitterPS"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sb_playername_leftpadding"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:nextFocusDown="@id/match_playerB"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_horizontal"/>
            <com.doubleyellow.scoreboard.view.PlayerTextView
                    android:id="@+id/match_playerB"
                    android:hint="@string/lbl_player_B"
                    android:textSize="@dimen/txt_small"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="@dimen/sb_playername_leftpadding"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:background="@drawable/button_dark"
                    android:tag="item"
                    android:layout_below="@id/lblPlayersS"
                    android:layout_toRightOf="@+id/match_playerA"
                    android:layout_toEndOf="@+id/match_playerA"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sb_playername_leftpadding"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/match_countryA"
                    android:imeOptions="actionDone"
                    android:layout_gravity="center_horizontal"/>
    </RelativeLayout>
        <RelativeLayout
                android:id="@+id/ll_match_doubles"
                android:layout_below="@id/ll_match_singles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:inputType="none"
                    android:id="@+id/lblPlayersD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_players"
                    android:textSize="@dimen/txt_medium"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
                <LinearLayout
                        android:id="@+id/match_splitterPD"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"/>
                <TextView android:inputType="none"
                        android:id="@+id/lblAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblPlayersD"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="A1/A2"
                        android:textSize="@dimen/txt_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />
            <com.doubleyellow.scoreboard.view.PlayerTextView
                    android:id="@+id/match_playerA1"
                    android:hint="@string/lbl_playerA1"
                    android:textSize="@dimen/txt_small"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="@dimen/sb_playername_leftpadding"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:background="@drawable/button_dark"
                    android:tag="item"
                    android:layout_below="@id/lblPlayersD"
                    android:layout_toRightOf="@id/lblAB"
                    android:layout_toEndOf="@id/lblAB"
                    android:layout_toLeftOf="@id/match_splitterPD"
                    android:layout_toStartOf="@id/match_splitterPD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sb_playername_leftpadding"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:nextFocusDown="@id/match_playerA2"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_horizontal"/>
            <com.doubleyellow.scoreboard.view.PlayerTextView
                    android:id="@+id/match_playerA2"
                    android:hint="@string/lbl_playerA2"
                    android:textSize="@dimen/txt_small"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="@dimen/sb_playername_leftpadding"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:background="@drawable/button_dark"
                    android:tag="item"
                    android:layout_below="@id/lblPlayersD"
                    android:layout_toRightOf="@id/match_playerA1"
                    android:layout_toEndOf="@id/match_playerA1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sb_playername_leftpadding"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:nextFocusDown="@id/match_playerB1"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_horizontal"/>
                <TextView android:inputType="none"
                        android:id="@+id/lblXY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblAB"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="B1/B2"
                        android:textSize="@dimen/txt_small"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />
            <com.doubleyellow.scoreboard.view.PlayerTextView
                    android:id="@+id/match_playerB1"
                    android:hint="@string/lbl_playerB1"
                    android:textSize="@dimen/txt_small"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="@dimen/sb_playername_leftpadding"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:background="@drawable/button_dark"
                    android:tag="item"
                    android:layout_below="@id/match_playerA1"
                    android:layout_toRightOf="@id/lblXY"
                    android:layout_toEndOf="@id/lblXY"
                    android:layout_toLeftOf="@id/match_splitterPD"
                    android:layout_toStartOf="@id/match_splitterPD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sb_playername_leftpadding"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:nextFocusDown="@id/match_playerB2"
                    android:imeOptions="actionNext"
                    android:layout_gravity="center_horizontal"/>
            <com.doubleyellow.scoreboard.view.PlayerTextView
                    android:id="@+id/match_playerB2"
                    android:hint="@string/lbl_playerB2"
                    android:textSize="@dimen/txt_small"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="@dimen/sb_playername_leftpadding"
                    android:paddingStart="@dimen/sb_playername_leftpadding"
                    android:background="@drawable/button_dark"
                    android:tag="item"
                    android:layout_below="@id/match_playerA2"
                    android:layout_toRightOf="@id/match_playerB1"
                    android:layout_toEndOf="@id/match_playerB1"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sb_playername_leftpadding"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/match_countryA"
                    android:imeOptions="actionDone"
                    android:layout_gravity="center_horizontal"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/ll_match_clubs"
            android:layout_below="@id/ll_match_doubles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:inputType="none"
                  android:id="@+id/lblClubs"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_clubs"
                  android:textSize="@dimen/txt_medium"
                  android:textAppearance="?android:attr/textAppearanceLarge"/>
        <!-- just an layout that is center in the parent to allow aligning to -->
        <LinearLayout
                android:id="@+id/match_splitterPCB"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:layout_width="2dp"
                android:layout_height="wrap_content"/>
        <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_clubA"
                android:hint="@string/lbl_club_A"
                android:textSize="@dimen/txt_small"
                android:textCursorDrawable="@null"
                android:paddingLeft="@dimen/sb_playername_leftpadding"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:tag="item"
                android:layout_below="@id/lblClubs"
                android:layout_toLeftOf="@id/match_splitterPCB"
                android:layout_toStartOf="@id/match_splitterPCB"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:maxLines="1"
                android:nextFocusDown="@+id/match_clubB"
                android:imeOptions="actionNext"
                android:layout_gravity="center_horizontal"
                dy:PreferenceKeys="clubList,clubListLastX"
                dy:defaultACValues="@string/emptyList_default"/>
        <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_clubB"
                android:hint="@string/lbl_club_B"
                android:textSize="@dimen/txt_small"
                android:textCursorDrawable="@null"
                android:paddingLeft="@dimen/sb_playername_leftpadding"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:background="@drawable/button_dark"
                android:tag="item"
                android:layout_below="@id/lblClubs"
                android:layout_toRightOf="@+id/match_clubA"
                android:layout_toEndOf="@+id/match_clubA"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:maxLines="1"
                android:nextFocusDown="@+id/spNumberOfGamesToWin"
                android:imeOptions="actionDone"
                android:layout_gravity="center_horizontal"
                dy:PreferenceKeys="clubList,clubListLastX"
                dy:defaultACValues="@string/emptyList_default"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_match_countries"
        android:layout_below="@id/ll_match_clubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:inputType="none"
                  android:id="@+id/lblCountries"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_countries"
                  android:textSize="@dimen/txt_medium"
                  android:textAppearance="?android:attr/textAppearanceLarge"/>
        <!-- just an layout that is center in the parent to allow aligning to -->
        <LinearLayout
            android:id="@+id/match_splitterPCT"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_width="2dp"
            android:layout_height="wrap_content"/>
        <com.doubleyellow.android.view.CountryTextView
            android:id="@+id/match_countryA"
            android:hint="@string/lbl_country_A"
            android:textSize="@dimen/txt_small"
            android:textCursorDrawable="@null"
            android:paddingLeft="@dimen/sb_playername_leftpadding"
            android:paddingStart="@dimen/sb_playername_leftpadding"
            android:background="@drawable/button_dark"
            android:tag="item"
            android:layout_below="@id/lblCountries"
            android:layout_toLeftOf="@id/match_splitterPCT"
            android:layout_toStartOf="@id/match_splitterPCT"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sb_playername_leftpadding"
            android:singleLine="true"
            android:maxLines="1"
            android:nextFocusDown="@+id/match_countryB"
            android:imeOptions="actionNext"
            android:layout_gravity="center_horizontal"/>
        <com.doubleyellow.android.view.CountryTextView
            android:id="@+id/match_countryB"
            android:hint="@string/lbl_country_B"
            android:textSize="@dimen/txt_small"
            android:textCursorDrawable="@null"
            android:paddingLeft="@dimen/sb_playername_leftpadding"
            android:paddingStart="@dimen/sb_playername_leftpadding"
            android:background="@drawable/button_dark"
            android:tag="item"
            android:layout_below="@id/lblCountries"
            android:layout_toRightOf="@+id/match_countryA"
            android:layout_toEndOf="@+id/match_countryA"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sb_playername_leftpadding"
            android:singleLine="true"
            android:maxLines="1"
            android:nextFocusDown="@+id/spNumberOfGamesToWin"
            android:imeOptions="actionDone"
            android:layout_gravity="center_horizontal"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/match_splitterF"
            android:orientation="horizontal"
            android:layout_below="@id/ll_match_countries"
            android:background="@drawable/border_dark"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="2dp"/>

        <TextView android:inputType="none"
            android:id="@+id/lblFormat"
            android:layout_below="@id/match_splitterF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pref_MatchFormat"
            android:textSize="@dimen/txt_medium"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />

        <LinearLayout
                android:id="@+id/llPoints"
                android:orientation="horizontal"
                android:layout_below="@id/lblFormat"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:inputType="none"
                        android:id="@+id/lblMatch_BestOf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_marginEnd="2dp"
                        android:text="@string/best_of_x_games_to_y_1"
                        android:textSize="@dimen/txt_small"
                        />
                <Spinner
                        android:id="@+id/spNumberOfGamesToWin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:nextFocusDown="@+id/spGameEndScore"
                        android:orientation="vertical"/>

                <TextView android:inputType="none"
                        android:id="@+id/lblMatch_GamesTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/best_of_x_games_to_y_2_Squash"
                        android:textSize="@dimen/txt_small"
                        android:layout_margin="2dp"
                        />
            <Spinner
                    android:id="@+id/spGameEndScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:nextFocusDown="@+id/useHandInHandOutScoring"
                    android:orientation="vertical"
                    />
        </LinearLayout>

    <LinearLayout
            android:id="@+id/llTieBreakFormat"
            android:orientation="horizontal"
            android:layout_below="@id/lblFormat"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:inputType="none"
                android:id="@+id/lblTieBreakFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sb_tiebreak"
                android:textSize="@dimen/txt_small"
                android:layout_margin="2dp"
                />
        <Spinner
                android:id="@+id/spTieBreakFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/useHandInHandOutScoring"
                android:layoutMode="opticalBounds"
                android:orientation="vertical"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/llPauseDuration"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/llTieBreakFormat"
            android:gravity="center"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:inputType="none"
                  android:id="@+id/lblPauseDuration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lblPauseDuration"
                  android:textSize="@dimen/txt_small"
                  android:layout_margin="2dp"
        />
        <Spinner
                android:id="@+id/spPauseDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/spHandicapFormat"
                android:layoutMode="opticalBounds"
                android:orientation="vertical"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/llHandicapFormat"
            android:orientation="horizontal"
            android:layout_below="@id/llTieBreakFormat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:inputType="none"
                android:id="@+id/lblHandicapFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/handicap"
                android:textSize="@dimen/txt_small"
                android:layout_margin="2dp"
                />
        <Spinner
                android:id="@+id/spHandicapFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/useHandInHandOutScoring"
                android:layoutMode="opticalBounds"
                android:orientation="vertical"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/llDisciplineStart"
            android:orientation="horizontal"
            android:layout_below="@id/llTieBreakFormat"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:inputType="none"
                android:id="@+id/lblDisciplineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_with_discipline"
                android:textSize="@dimen/txt_small"
                android:layout_margin="2dp"
                />
        <Spinner
                android:id="@+id/spDisciplineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:orientation="vertical"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/llNumberOfServesPerPlayer"
            android:orientation="horizontal"
            android:layout_below="@+id/llPauseDuration"
            android:gravity="center"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView android:inputType="none"
                  android:id="@+id/lblNumberOfServesPerPlayer"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/number_of_serves_per_player"
                  android:textSize="@dimen/txt_small"
                  android:layout_margin="2dp"
        />
        <Spinner
                android:id="@+id/spNumberOfServesPerPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutMode="opticalBounds"
                android:orientation="vertical"/>
    </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_doubleServeSequence"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/llHandicapFormat"
                android:gravity="center"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:inputType="none"
                        android:id="@+id/lblDoublesServeSequence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sb_doublesServeSequence"
                        android:textSize="@dimen/txt_small"
                        android:layout_margin="2dp"
                        />
                <Spinner
                        android:id="@+id/spDoublesServeSequence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:nextFocusDown="@+id/useHandInHandOutScoring"
                        android:layoutMode="opticalBounds"
                        android:orientation="vertical"/>
        </LinearLayout>
    <LinearLayout
            android:id="@+id/llScoringType"
            android:orientation="vertical"
            android:gravity="right"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ll_doubleServeSequence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
                android:id="@+id/useHandInHandOutScoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:singleLine="true"
                android:maxLines="1"
                android:text="@string/pref_useEnglishScoring"
                android:textSize="@dimen/txt_small"
                />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/llLiveScore"
            android:orientation="vertical"
            android:gravity="right"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/llScoringType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
                android:id="@+id/cbUseLivescore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:singleLine="true"
                android:maxLines="1"
                android:text="@string/pref_updateLiveScore"
                android:textSize="@dimen/txt_small"
                />
    </LinearLayout>
        <LinearLayout
                android:id="@+id/match_splitterE"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_below="@id/llLiveScore"
                android:layout_width="2dp"
                android:layout_height="wrap_content"/>

        <TextView android:inputType="none"
                  android:layout_below="@id/match_splitterE"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/lbl_event"
                  android:textSize="@dimen/txt_medium"
                  android:textAppearance="?android:attr/textAppearanceLarge"
                  android:id="@+id/lblEvent"/>
        <LinearLayout
                android:id="@+id/ll_match_event_texts1"
                android:orientation="horizontal"
                android:layout_below="@id/lblEvent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toLeftOf="@id/match_splitterE"
                android:layout_toStartOf="@id/match_splitterE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.doubleyellow.scoreboard.view.PreferenceACTextView
                        android:id="@+id/match_event"
                        android:layout_weight="1"
                        android:background="@drawable/button_dark"
                        android:textCursorDrawable="@null"
                        android:paddingLeft="@dimen/sb_playername_leftpadding"
                        android:paddingStart="@dimen/sb_playername_leftpadding"
                        android:hint="@string/name"
                        android:textSize="@dimen/txt_small"
                        android:tag="item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sb_playername_leftpadding"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:nextFocusDown="@id/match_division"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center_horizontal"
                        dy:PreferenceKeys="eventList,eventLast"
                        dy:defaultACValues="@string/eventList_default"/>
                <com.doubleyellow.scoreboard.view.PreferenceACTextView
                        android:id="@+id/match_division"
                        android:layout_weight="1"
                        android:background="@drawable/button_dark"
                        android:textCursorDrawable="@null"
                        android:paddingLeft="@dimen/sb_playername_leftpadding"
                        android:paddingStart="@dimen/sb_playername_leftpadding"
                        android:hint="@string/lbl_division"
                        android:textSize="@dimen/txt_small"
                        android:tag="item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sb_playername_leftpadding"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:nextFocusDown="@id/match_round"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center_horizontal"
                        dy:PreferenceKeys="divisionList,divisionLast"
                        dy:defaultACValues="@string/divisionList_default"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_match_event_texts2"
                android:orientation="horizontal"
                android:layout_below="@id/ll_match_event_texts1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toLeftOf="@id/match_splitterE"
                android:layout_toStartOf="@id/match_splitterE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.doubleyellow.scoreboard.view.PreferenceACTextView
                        android:id="@+id/match_round"
                        android:layout_weight="1"
                        android:background="@drawable/button_dark"
                        android:textCursorDrawable="@null"
                        android:paddingLeft="@dimen/sb_playername_leftpadding"
                        android:hint="@string/lbl_round"
                        android:textSize="@dimen/txt_small"
                        android:tag="item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sb_playername_leftpadding"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:nextFocusDown="@id/match_location"
                        android:imeOptions="actionNext"
                        android:layout_gravity="center_horizontal"
                        dy:PreferenceKeys="roundList,roundLast"
                        dy:defaultACValues="@string/roundList_default"/>
                <com.doubleyellow.scoreboard.view.PreferenceACTextView
                        android:id="@+id/match_location"
                        android:layout_weight="1"
                        android:background="@drawable/button_dark"
                        android:textCursorDrawable="@null"
                        android:paddingLeft="@dimen/sb_playername_leftpadding"
                        android:hint="@string/lbl_location"
                        android:textSize="@dimen/txt_small"
                        android:tag="item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/sb_playername_leftpadding"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:nextFocusDown="@id/match_court"
                        android:imeOptions="actionDone"
                        android:layout_gravity="center_horizontal"
                        dy:PreferenceKeys="locationList,locationLast"
                        dy:defaultACValues="@string/emptyList_default"/>
            <com.doubleyellow.scoreboard.view.PreferenceACTextView
                android:id="@+id/match_court"
                android:background="@drawable/button_dark"
                android:textCursorDrawable="@null"
                android:paddingLeft="@dimen/sb_playername_leftpadding"
                android:paddingStart="@dimen/sb_playername_leftpadding"
                android:hint="@string/lbl_court_Squash"
                android:textSize="@dimen/txt_small"
                android:tag="item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/sb_playername_leftpadding"
                android:singleLine="true"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:layout_gravity="center_horizontal"
                dy:PreferenceKeys="courtList,courtLast"
                dy:defaultACValues="@string/emptyList_default"/>
            <TextView
                android:id="@+id/match_id"
                android:hint="Match ID/Source ID"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Match ID/Source ID"
                android:textSize="@dimen/txt_medium"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/match_splitterR"
                android:orientation="horizontal"
                android:layout_below="@id/ll_match_event_texts2"
                android:background="@drawable/border_dark"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        <TextView
                android:id="@+id/lblReferee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/match_splitterR"
                android:text="@string/lbl_referee"
                android:textSize="@dimen/txt_medium"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
        <LinearLayout
                android:id="@+id/ll_referees"
                android:layout_below="@id/lblReferee"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
